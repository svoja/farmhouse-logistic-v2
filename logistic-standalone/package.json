{
  "name": "logistic-standalone",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node server/index.js",
    "db:schema": "node -e \"require('child_process').execSync('mysql -u root -p < server/db/schema.sql', {stdio:'inherit', shell: process.platform==='win32'?'cmd.exe':true})\"",
    "db:seed": "node -e \"require('child_process').execSync('mysql -u root -p logistic_standalone < server/db/seed.sql', {stdio:'inherit', shell: process.platform==='win32'?'cmd.exe':true})\"",
    "db:setup": "echo Run: npm run db:schema then npm run db:seed (or use PowerShell options in README)"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "leaflet": "^1.9.4",
    "mysql2": "^3.11.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.0",
    "@vitejs/plugin-react": "^4.3.3",
    "tailwindcss": "^4.1.0",
    "vite": "^6.0.1"
  }
}
